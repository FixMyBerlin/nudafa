---
import { getCollection } from 'astro:content'
import CommuneLabel from './CommuneLabel.astro'

type Props = {
  communeName: string
}

const communes = await getCollection('communes')
const { communeName } = Astro.props as Props
const communeColor = communes.find((c) => c.slug === communeName)?.data.color
---

<CommuneLabel communeName={communeName} communeColor={communeColor} />

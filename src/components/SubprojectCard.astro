---
import { Image } from 'astro:assets'
import { cardStylesForLinkElements, linkStyles } from './links/styles'
import H3 from './Text/H3.astro'

type Props = {
  href?: string
  image: any
  title: string
  teaser?: string
  teaserImageCopyright?: string
}
const { href, title, teaser, image, teaserImageCopyright } = Astro.props
---

<li class:list={['']}>
  <a
    class:list={[
      'h-xs flex w-full flex-col justify-between gap-3 rounded-sm bg-white shadow-lg',
      cardStylesForLinkElements,
    ]}
    href={href}
  >
    <figure class:list={['h-[250px] w-full']}>
      <Image
        class="h-full w-full overflow-hidden object-cover"
        src={image}
        alt={''}
        loading="lazy"
      />
      {
        teaserImageCopyright && (
          <figcaption class="mr-6 mt-2 text-right text-xs text-gray-400 md:text-sm">
            Â© {teaserImageCopyright}
          </figcaption>
        )
      }
    </figure>
    <div class="line-clamp-2 flex flex-col gap-4 p-6">
      <h3 class="font-serif text-2xl font-bold">{title}</h3>
      {teaser && <p class="line-clamp-3">{teaser}</p>}
      <small class:list={[linkStyles]}>Weiterlesen</small>
    </div>
  </a>
</li>

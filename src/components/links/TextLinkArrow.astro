---
import { ArrowRightIcon, ArrowUpRightIcon } from "@heroicons/react/24/outline";
import { linkStyles } from "./styles";

interface Props {
  href: string;
  external?: boolean;
  display?: string;
}

const { display, external, href } = Astro.props as Props;
---

{
  external ? (
    <span>
      <a
        href={href}
        class={linkStyles}
        rel="noopener noreferrer"
        target="_blank"
      >
        <ArrowUpRightIcon className="h-4 w-4 inline pr-1" />
        {display}
      </a>
    </span>
  ) : (
    <span>
      <a href={href} class={linkStyles}>
        <ArrowRightIcon className="h-4 w-4 inline pr-1" />
        {display}
      </a>
    </span>
  )
}

---
import { Image } from "astro:assets";
import { cardStylesForLinkElements, linkStyles } from "./links/styles";

interface Props {
  href?: string;
  image?: any;
  title: string;
  teaser?: string;
}
const { href, title, teaser, image } = Astro.props;
---

{
  href && (
    <li class:list={["p-4 bg-yellow-100", cardStylesForLinkElements]}>
      <a class:list={["flex flex-row gap-6 items-center"]} href={href}>
        {image && (
          <Image
            src={image}
            width="100"
            alt=""
            class="rounded-full w-20 h-20 object-cover shrink-0"
          />
        )}
        <div class="flex flex-col gap-2">
          <p class="font-bold uppercase">{title}</p>
          {teaser && <p>{teaser}</p>}
          <small class={linkStyles}>Weiterlesen</small>
        </div>
      </a>
    </li>
  )
}

---
import { Image } from "astro:assets";
import { linkStyles } from "./links/styles";
import TextLinkArrow from "./links/TextLinkArrow.astro";
interface Props {
  image: any;
  name: string;
  website?: string;
}
const { name, image, website } = Astro.props;
---

<li
  class:list={[
    "min-h-[192px] rounded-sm pt-8 flex flex-col bg-white shadow-lg items-center gap-6 w-full justify-between text-sm",
  ]}
>
  <figure class:list={["w-full"]}>
    <Image
      class="w-auto h-[160px] mx-auto overflow-hidden object-cover"
      src={image}
      alt={""}
      loading="lazy"
    />
    <figcaption></figcaption>
  </figure>
  <div class="flex flex-col items-center gap-2 sm:px-4 text-center pr-6">
    <p class="font-bold text-center">{name}</p>
  </div>
  {
    website && (
      <div class="border-t w-full flex justify-center py-3">
        <TextLinkArrow display="Website" external href={website} />
      </div>
    )
  }
</li>

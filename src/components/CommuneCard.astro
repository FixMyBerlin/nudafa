---
import { Picture } from 'astro:assets'
import TextLinkArrow from 'keystatic/components/TextLinkArrow/TextLinkArrow.astro'

type Props = {
  image: any
  name: string
  website?: string
}
const { name, image, website } = Astro.props
---

<li
  class="flex min-h-[192px] w-full flex-col items-center justify-between gap-6 rounded-sm bg-white pt-8 text-sm shadow-lg"
>
  <figure class="w-full">
    <Picture
      class="mx-auto h-[160px] w-auto overflow-hidden object-cover"
      src={image}
      alt={`Logo der Kommune ${name}`}
      loading="lazy"
      height={160}
      formats={['jpg', 'avif']}
      densities={[1.5, 2]}
    />
  </figure>
  <div class="flex flex-col items-center gap-2 pr-6 text-center sm:px-4">
    <p class="text-center font-bold">{name}</p>
  </div>
  {
    website && (
      <div class="flex w-full justify-center border-t py-3">
        <TextLinkArrow display="Website" external href={website} />
      </div>
    )
  }
</li>

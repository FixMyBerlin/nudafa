---
import { Image } from "astro:assets";
import { cardStylesForLinkElements, linkStyles } from "./links/styles";

interface Props {
  href?: string;
  image: any;
  title: string;
  teaser?: string;
}
const { href, title, teaser, image } = Astro.props;
---

<li class:list={[""]}>
  <a
    class:list={[
      "rounded-sm flex bg-white shadow-lg flex-col gap-3 h-xs w-full justify-between",
      cardStylesForLinkElements,
    ]}
    href={href}
  >
    <figure class:list={["w-full h-[250px]"]}>
      <Image
        class="w-full h-full overflow-hidden object-cover"
        src={image}
        alt={""}
        loading="lazy"
      />
      <figcaption></figcaption>
    </figure>
    <div class="flex flex-col gap-2 line-clamp-2 p-6">
      <p class="font-bold">{title}</p>
      {teaser && <p class="line-clamp-3">{teaser}</p>}
    </div>
    <small class:list={[linkStyles, "px-6 pb-6"]}>Weiterlesen</small>
  </a>
</li>

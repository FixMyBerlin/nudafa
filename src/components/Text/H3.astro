---
interface Props {
  id?: string;
  className?: string;
}

const { id, className } = Astro.props;
---

<div class="mb-4 md:mb-6">
  <h3
    id={id}
    class:list={[
      "mt-8 text-xl font-bold text-black md:mt-10 md:text-2xl mb-1",
      className,
    ]}
  >
    <slot />
  </h3>
  <div class="h-[2px] bg-yellow-500 w-1/3"></div>
</div>

---
import ProseMarkdown from './ProseMarkdown.astro'
import H1 from './Text/H1.astro'
import Section from './layouts/Section.astro'

type Props = {
  title: string
  subTitle?: string
}

const { title, subTitle } = Astro.props
---

<Section className="mt-12">
  <H1>
    {title}
  </H1>
  {subTitle && <p class="mb-10 text-base md:text-xl">{subTitle}</p>}
  <ProseMarkdown>
    <slot />
  </ProseMarkdown>
</Section>

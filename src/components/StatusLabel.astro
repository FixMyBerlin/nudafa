---
import { Image } from 'astro:assets'
import BuildingIcon from './../assets/icons/building.png'
import BulbIcon from './../assets/icons/bulb.png'
import CheckmarkIcon from './../assets/icons/checkmark.png'
import PlanningIcon from './../assets/icons/planning.png'

type Props = {
  state: string
}

type TStatusTableData = {
  [key: string]: {
    color: string
    title: string
    icon?: any
  }
}

export const partnersTableData: TStatusTableData = {
  idee: {
    color: 'bg-[#FEF3C7]',
    title: 'Idee',
    icon: BulbIcon,
  },
  // todo
  'in-vorbereitung': { color: 'bg-[#FDE68A]', title: 'in Vorbereitung', icon: PlanningIcon },
  realization: {
    color: 'bg-[#FBBF24]',
    title: 'Umsetzung',
    icon: BuildingIcon,
  },
  'in-planung': { color: 'bg-[#FDE68A]', title: 'in Planung', icon: PlanningIcon },
  'in-umsetzung': {
    color: 'bg-[#FBBF24]',
    title: 'in Umsetzung',
    icon: BuildingIcon,
  },
  abgeschlossen: { color: 'bg-[#84D470]', title: 'abgeschlossen', icon: CheckmarkIcon },
  // todo
  zurueckgestellt: { color: 'bg-[#84D470]', title: 'zurueckgestellt', icon: CheckmarkIcon },
  // todo
  archiviert: { color: 'bg-[#84D470]', title: 'archiviert', icon: CheckmarkIcon },
}

const { state } = Astro.props as Props
---

<span
  class:list={[
    'flex list-none items-center gap-1 rounded-full py-[2px] pl-2 pr-3 text-xs text-black',
    partnersTableData[state].color,
  ]}
>
  <Image
    class="h-6 w-6"
    src={partnersTableData[state].icon}
    alt={`Status: ${state}`}
    loading="lazy"
  />

  <p>
    {partnersTableData[state].title}
  </p>
</span>

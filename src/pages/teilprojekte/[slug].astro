---
import { getCollection } from "astro:content";
import PageHeader from "../../components/PageHeader.astro";
import ProseMarkdown from "../../components/ProseMarkdown.astro";
import SubProjectTable from "../../components/SubProjectTable.astro";
import Layout from "../../components/layouts/Layout.astro";
import Section from "../../components/layouts/Section.astro";

export async function getStaticPaths() {
  const projects = await getCollection("subprojects");
  return projects.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const {
  title,
  subTitle,
  topics,
  projectCommunes,
  start,
  end,
  partners,
  funding,
} = entry.data;
const { Content } = await entry.render();
---

<Layout title={title}>
  <PageHeader title={title} subTitle={subTitle} />
  <Section>
    <SubProjectTable
      start={start}
      end={end}
      commune={projectCommunes}
      partners={partners}
      funding={funding}
      topics={topics}
    />
  </Section>
  <Section>
    <ProseMarkdown>
      <Content components={{}} />
    </ProseMarkdown>
  </Section>
</Layout>
